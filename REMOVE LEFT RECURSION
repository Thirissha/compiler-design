#include <stdio.h>
#include <string.h>
int main() {
    char prod[20], startSymbol, alpha[10], beta[10];
    int i = 3, j = 0, k = 0;
    printf("Enter a production: ");
    scanf("%s", prod);
    startSymbol = prod[0];
    if (prod[0] == prod[3]) {
        for (i = 4; prod[i] != '|'; i++) alpha[j++] = prod[i];
        alpha[j] = '\0'; i++;
        while (prod[i] != '\0') beta[k++] = prod[i++];
        beta[k] = '\0';
        printf("%c->%s%c'\n", startSymbol, beta, startSymbol);
        printf("%c'->%s%c'|e\n", startSymbol, alpha, startSymbol);
    } else {
        printf("No left recursion detected.\n");
    }
    return 0;
}
